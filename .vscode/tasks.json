{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang сборка активного файла",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "libft/*.c",
                "*.c",
                "gnl/*.c",
                "-lmlx",
                "-lXext",
                "-lX11",
                "-lm",
                "-o",
                "${fileDirname}/cub3D"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}